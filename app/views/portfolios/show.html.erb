<div style="margin: 5%; padding: 5%; border: 1px solid black; width: 500px; height: 500px; text-align: center;">
  <h1><%= @portfolio_item.title %></h1>
  <h3><%= @portfolio_item.subtitle %></h3>
  <br>
  <p><%= @portfolio_item.body %></p>
  <br>
  <%= image_tag @portfolio_item.thumb_image unless @portfolio_item.thumb_image.nil? %>
  <br>
  <%= link_to "Edit", edit_portfolio_path(@portfolio_item.id) %>
  <br>
  <%= link_to "Delete", portfolio_path(@portfolio_item.id), method: :delete, data: { confirm: "Are you sure?" } %>
  <br>
  <%= link_to "Home", portfolios_path %>
</div>
